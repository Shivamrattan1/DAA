#include <iostream>
using namespace std;
int main()

{

int n,k,i,c=0,j;

cout<<"ENTER NO. OF ELEMENTS IN ARRAY\n";

cin>>n;

cout<<"ENTER ARRAY\n";

int *p = new int[n];

for(i=0;i<n;i++)
{

cin>>*(p+i);
}
cout<<"ENTER DIFFERENCE TO SEARCH IN ARRAY\n";
cin>>k;
for(i=0;i<n;i++)
{
    for(j=i+1;j<n;j++)
    {
        if( abs((*(p+i)) - (*(p+j)))==k)
        {
            c=c+1;
        }
    }
}
cout<<c;
return 0;
}
